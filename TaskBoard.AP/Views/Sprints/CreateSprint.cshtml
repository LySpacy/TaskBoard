@using TaskBoard.API.Contracts
@using TaskBoard.Domain.Models;
@using TaskBoard.API.Contracts.Sprint;
@model CreateSprintRequest

<h2>Создание спринта</h2>
<form asp-action="CreateSprint" method="post">
    <input type="hidden" name="ProjectId" value="@Model.ProjectId">
    <div class="form-group"> 
        <label for="Title">Название:</label>
        <input type="text" class="form-control" id="Title" name="Title" required>
    </div>
    <div class="form-group">
        <label for="Description">Описание:</label>
        <textarea class="form-control" id="Description" name="Description" required></textarea>
    </div>
    <div class="form-group">
        <label for="Comment">Комментарий:</label>
        <textarea class="form-control" id="Comment" name="Comment" required></textarea>
    </div>
    <div class="form-group">
        <label for="DateEnd">Дата завершения:</label>
        <input type="date" class="form-control" id="DateEnd" name="DateEnd" required>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a href="@Url.Action("GetProject", "Projects", new { id = @Model.ProjectId })" class="btn btn-secondary">Назад к проекту</a>
</form>
